@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Renvoyer la confirmation d'e-mail";
}

<h1>@ViewData["Title"]</h1>
<h2>Saisissez votre adresse e-mail.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert">
                @if (!ViewData.ModelState.IsValid)
                {
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                }
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="nom@exemple.com" />
                <label asp-for="Input.Email" class="form-label">Adresse e-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-dark-orange">Renvoyer</button>
        </form>
    </div>
</div>

<style>
    .btn-dark-orange {
        background-color: #FF9900; /* Orange vif */
        color: black; /* Texte noir */
        border: none;
        padding: 12px 20px; /* Padding accru pour un look audacieux */
        border-radius: 8px; /* Coins arrondis */
        font-weight: bold; /* Texte en gras pour l'accentuation */
        transition: background-color 0.3s; /* Effet de survol fluide */
    }

        .btn-dark-orange:hover {
            background-color: #E64A19; /* Orange légèrement plus clair au survol */
            color: black; /* Maintenir le texte noir */
        }

    .form-floating label {
        color: #333; /* Texte du label plus sombre pour le contraste */
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
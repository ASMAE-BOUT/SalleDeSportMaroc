@model SalleDeSportMaroc.Areas.Admin.Controllers.RegisterAdminViewModel

@{
    ViewData["Title"] = "Ajouter un Membre";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="fw-bold text-dark">➕ Ajouter un Nouveau Membre</h2>
        <p class="text-muted">Remplissez le formulaire pour ajouter un nouveau membre.</p>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="CreateMember" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mot de passe</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning w-100">Ajouter</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

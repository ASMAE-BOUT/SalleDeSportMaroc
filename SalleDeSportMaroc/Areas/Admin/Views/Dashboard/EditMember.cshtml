@model SalleDeSportMaroc.Areas.Admin.Controllers.EditMemberViewModel

@{
    ViewData["Title"] = "Modifier un Membre";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="fw-bold text-dark">✏️ Modifier un Membre</h2>
        <p class="text-muted">Modifiez les informations du membre.</p>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="EditMember" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Nom</label>
                        <input asp-for="UserName" class="form-control" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning w-100">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

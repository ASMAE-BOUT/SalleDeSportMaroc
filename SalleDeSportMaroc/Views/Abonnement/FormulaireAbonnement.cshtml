@model SalleDeSportMaroc.Models.Abonnement
@{
    ViewData["Title"] = "Formulaire d'Abonnement";
    var typeAbonnement = ViewBag.TypeAbonnement ?? "Standard";
}

<div class="container mt-5">
    <h2 class="text-center">📄 Formulaire d'abonnement - @typeAbonnement</h2>

    <form method="post" action="@Url.Action("ConfirmerAbonnement", "Abonnement")">
        <input type="hidden" name="TypeAbonnement" value="@typeAbonnement" />

        <div class="mb-3">
            <label class="form-label">Nom Complet</label>
            <input type="text" name="Nom" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Adresse Email</label>
            <input type="email" name="Email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Téléphone</label>
            <input type="tel" name="Telephone" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-warning w-100">✅ Confirmer l'abonnement</button>
    </form>
</div>

@{
    ViewData["Title"] = "Contact";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="fw-bold">📞 Contactez-nous</h2>
        <p class="text-muted">
            Nous sommes à votre disposition pour toute question ou information complémentaire !
        </p>
    </div>

    <div class="row align-items-center mt-4">
        <!-- Image -->
        <div class="col-md-6">
            <img src="~/images/contact.jpg" class="img-fluid rounded shadow" alt="MarocActive Contact">
        </div>

        <!-- Coordonnées -->
        <div class="col-md-6">
            <h3 class="fw-bold">📍 MarocActive</h3>
            <p><strong>🏠 Adresse :</strong> 123 Avenue Hassan II, Rabat, Maroc</p>
            <p><strong>📞 Téléphone :</strong> +212 6 12 34 56 78</p>
            <p><strong>📧 Email :</strong> contact@marocactive.com</p>
            <p><strong>🕒 Horaires :</strong></p>
            <ul>
                <li>🕘 Lundi - Vendredi : 6h - 22h</li>
                <li>🕙 Samedi : 8h - 20h</li>
                <li>🕛 Dimanche : 9h - 18h</li>
            </ul>
        </div>
    </div>

    <hr class="my-5">

    <!-- Formulaire de contact -->
    <div class="text-center">
        <h3 class="fw-bold">📩 Envoyez-nous un message</h3>
    </div>

    <form method="post" action="@Url.Action("EnvoyerMessage", "Home")" class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <label for="nom" class="form-label">👤 Votre Nom</label>
                <input type="text" class="form-control" id="nom" name="Nom" required>
            </div>
            <div class="col-md-6">
                <label for="email" class="form-label">📧 Votre Email</label>
                <input type="email" class="form-control" id="email" name="Email" required>
            </div>
        </div>

        <div class="mt-3">
            <label for="message" class="form-label">💬 Votre Message</label>
            <textarea class="form-control" id="message" name="Message" rows="4" required></textarea>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-warning btn-lg">📨 Envoyer le message</button>
        </div>
    </form>

    <hr class="my-5">

    <!-- Carte Google Maps -->
    <div class="text-center">
        <h3 class="fw-bold">🗺️ Notre Localisation</h3>
    </div>

    <div class="mt-4">
        <iframe class="w-100 rounded shadow"
                height="350"
                frameborder="0"
                style="border:0"
                allowfullscreen
                src="https://www.google.com/maps/embed/v1/place?key=YOUR_GOOGLE_MAPS_API_KEY&q=MarocActive+Rabat">
        </iframe>
    </div>
</div>
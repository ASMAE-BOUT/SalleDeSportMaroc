@model SalleDeSportMaroc.Models.Abonnement
@{
    ViewData["Title"] = "Mon Profil";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="fw-bold">👤 Mon Profil</h2>
        <p class="text-muted">Gérez vos informations personnelles et votre compte.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">🔹 Informations Personnelles</h4>
                    <p><strong>📧 Email :</strong> @User.Identity.Name</p>
                    <p><strong>🆔 ID Utilisateur :</strong> @ViewData["UserId"]</p>

                    <hr>

                    <h4 class="card-title">📌 Abonnement</h4>
                    <p><strong>💳 Type :</strong> @ViewData["Abonnement"]</p>

                    <hr>

                    <div class="text-center">
                        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">🏠 Retour à l'accueil</a>
                        <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">🚪 Déconnexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


